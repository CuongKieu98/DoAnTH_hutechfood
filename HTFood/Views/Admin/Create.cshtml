@model HTFood.Models.Admin

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/assets/css/create.css" rel="stylesheet" />
<title>Thêm mới quản trị viên</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">

                    <h2>Thêm mới quản trị viên</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Admin</a></li>
                        <li class="breadcrumb-item active">Trần Văn Dần</li>

                    </ul>

                </div>
            </div>
            <!--/Header-->
            <!--content-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            
                <div class="row clearfix">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="header">
                                <h2>TẠO THÀNH VIÊN QUẢN TRỊ</h2>
                                <ul class="header-dropdown m-r--5">
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="javascript:void(0);">Action</a></li>
                                            <li><a href="javascript:void(0);">Another action</a></li>
                                            <li><a href="javascript:void(0);">Something else</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <div class="body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <form id="form_advanced_validation" method="POST" novalidate="novalidate">

                                    <div class="row clearfix">

                                        <div class="col-md-6">
                                            <div class="input-group icon before_span">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">person</i>
                                                </span>
                                                <div class="form-line">
                                                    <input type="text" value="" name="UserAdmin" class="form-control date" maxlength="50" placeholder="Tên tài khoản" required="" aria-required="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-md-6">
                                            <div class="input-group icon before_span">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                                <div class="form-line">
                                                    <input type="text" value="" name="PassAdmin" maxlength="50" minlength="6" class="form-control date" placeholder="Mật khẩu" required="" aria-required="true">
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row clearfix">
                                        <div class="col-md-6">
                                            <div class="input-group icon before_span">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">person_outline</i>
                                                </span>
                                                <div class="form-line">
                                                    <input type="text" value="" name="HotenAdmin" class="form-control date" maxlength="50" placeholder="Họ & Tên" required="" aria-required="true">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-md-6">
                                            <div class="input-group icon before_span">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">email</i>
                                                </span>
                                                <div class="form-line">
                                                    <input type="email" value="" name="EmailAdmin" class="form-control date" placeholder="Email" required="" aria-required="true">
                                                </div>
                                            </div>
                                        </div>
                                        </div>

                                        <div class="row clearfix">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <p>Quyền hạn:</p>

                                                    <select name="AdminRole" class="form-control">
                                                        @foreach (var item in ViewBag.TenCV)
                                                        {
                                                            <option value="@item.Id">@item.TenCV</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>

                                        </div>







                                        <button class="btn btn-raised btn-primary waves-effect" type="submit">Tạo mới</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <!--/content-->
        </div>
    </div>
</section>