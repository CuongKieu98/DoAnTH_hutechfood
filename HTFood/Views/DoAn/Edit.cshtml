@model HTFood.Models.DoAn

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/assets/css/create.css" rel="stylesheet" />
<link href="~/assets/css/edit.css" rel="stylesheet" />
<title>Chỉnh sửa đồ ăn</title>
<!---->
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Chỉnh sửa đồ ăn</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DoAn")">Đồ ăn</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa đồ ăn</li>
                    </ul>

                </div>
            </div>
            <!--/Header-->
            <!--content-->

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="card">
                    <div class="body">
                        <form id="form_advanced_validation" method="POST" novalidate="novalidate">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.MaDA)
                            <div class="row clearfix">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <div class="form-line error">
                                            @*<input class="form-control" id="TenDA" name="TenDA" required="" aria-required="true" aria-invalid="true" type="text" value="" placeholder="Tên sản phẩm..">*@
                                            @Html.EditorFor(model => model.TenDA, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TenDA, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="help-info">Tên sản phẩm</div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group form-float">
                                        <div class="form-line error">


                                            @*<input class="form-control" id="Dongia" name="Dongia" required="" aria-required="true" aria-invalid="true" type="number" value="" placeholder="Đơn giá">*@
                                            @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })


                                        </div>
                                        <div class="help-info">Đơn giá vnđ</div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    Trạng thái sản phẩm:
                                    <form>
                                        <select name="TrangThaiDA" id="TrangThaiDA" aria-invalid="true" class="custom-select mb-3">

                                            <option value="0">Mở bán</option>
                                            <option value="1">Tạm đóng</option>

                                        </select>
                                        @Html.ValidationMessageFor(model => model.TrangThaiDA, "", new { @class = "text-danger" })
                                    </form>

                                </div>

                            </div>


                            <div class="row clearfix">
                                <div class="col-sm-4">
                                    <div class="form-group form-float">
                                        <div class="form-line error">


                                            @*<input class="form-control" id="NgayCapNhat" name="NgayCapNhat" required="" aria-required="true" aria-invalid="true" type="date" value="" placeholder="Ngày cập nhật..">*@
                                            @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="help-info">Ngày cập nhật</div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group form-float">
                                        <div class="form-line error">
                                            @*<input class="form-control" id="SoLuongTon" name="SoLuongTon" required="" aria-required="true" aria-invalid="true" type="text" value="" placeholder="Tồn kho..">*@
                                            @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="help-info">Tồn kho</div>
                                    </div>
                                </div>



                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-4">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            @*<input class="form-control" id="DanhGiaDoAn" name="DanhGiaDoAn" required="" aria-required="true" aria-invalid="true" type="text" value="" placeholder="Đánh giá..">*@
                                            @Html.EditorFor(model => model.DanhGiaDoAn, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DanhGiaDoAn, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="help-info">Đánh giá</div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            @*<input class="form-control" id="MaDM" name="MaDM" required="" aria-required="true" aria-invalid="true" type="text" value="" placeholder="Danh mục..">*@
                                            @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="help-info">Danh mục</div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <label class="label icon-field">Ảnh</label> <c style="color:red; text-decoration:underline">@ViewBag.Thongbao</c><br>
                                    <div class="input-group" style="margin: 15px 0px;">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroupFileAddon01">Tải lên</span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="hidden" name="AnhDA" value="@Model.AnhDA" />
                                            <input type="file" value="" class="custom-file-input" id="inputGroupFile01" name="fileupload">
                                            <label class="custom-file-label" for="inputGroupFile01">Chọn file</label>
                                        </div>
                                    </div>
                                    <div class="img-post">
                                        <img src="@Url.Content("~/images/"+ Model.AnhDA)" width="200" />
                                    </div>

                                </div>
                            </div>
                            <div class="row clearfix">

                                <div class="col-sm-12">
                                    <h2 class="card-inside-title">Mô tả sản phẩm:</h2>
                                    <textarea name="MoTa" id="Mota">Nội dung...</textarea>
                                    <script>
                                        CKEDITOR.replace('MoTa');
                                        CKFinder.setupCKEditor(null, '/ckfinder');

                                    </script>

                                    @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <button class="btn btn-raised btn-primary waves-effect" value="Save" type="submit">Lưu thay đổi</button>
                        </form>

                    </div>
                </div>

            }
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });

</script>